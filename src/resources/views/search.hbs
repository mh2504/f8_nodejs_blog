<div class="mt-4">
    <form method="POST">
        
   
        <div class="form-group">
            <label for="search-input">Tìm kiếm</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Từ khóa . . .">
        </div>

        <div class="form-group">
            <label for="select-gender">Giới tính</label>
            <select name="gender" class="form-control" id="search" placeholder="Nhập từ khóa">
                <option value="">-- Chọn giới tính --</option>
                <option value="Male">Nam</option>
                <option value="Female">Nữ</option>
            </select>
        </div> 

        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>